#!/bin/bash

set -e

omarchy-update-time
# Skip omarchy-update-keyring (basecamp repository specific, not used in Mac fork)
# Save kernel version before updates to detect if it actually changes
pacman -Q linux-asahi 2>/dev/null | awk '{print $2}' > /tmp/omarchy-kernel-before

omarchy-update-available-reset
omarchy-update-system-pkgs
omarchy-migrate
omarchy-hook post-update
omarchy-update-restart
