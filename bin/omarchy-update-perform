#!/bin/bash

set -e

# Ensure screensaver/sleep doesn't set in during updates
hyprctl dispatch tagwindow +noidle &> /dev/null || true

# Capture update logs
exec > >(tee "/tmp/omarchy-update.log") 2>&1

# Perform all update steps
omarchy-update-time

# Save newest installed kernel package version before updates.
rpm -q --qf '%{VERSION}-%{RELEASE}.%{ARCH}\n' kernel-core 2>/dev/null | sort -V | tail -1 > /tmp/omarchy-kernel-before

omarchy-update-available-reset
omarchy-update-system-pkgs
omarchy-migrate
omarchy-hook post-update

omarchy-update-analyze-logs

omarchy-update-restart

# Re-enable screensaver/sleep after updates
hyprctl dispatch tagwindow -- -noidle &> /dev/null || true
