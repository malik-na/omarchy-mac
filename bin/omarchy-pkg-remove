#!/bin/bash

if (($# > 0)); then
  pkg_names="$*"
elif command -v gum >/dev/null 2>&1; then
  pkg_names=$(gum input --placeholder "Enter installed package names to remove")
else
  read -r -p "Enter installed package names to remove: " pkg_names
fi

if [[ -n "$pkg_names" ]]; then
  sudo dnf remove -y $pkg_names
  omarchy-show-done
fi
