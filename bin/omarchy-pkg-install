#!/bin/bash

if (($# > 0)); then
  pkg_names="$*"
elif command -v gum >/dev/null 2>&1; then
  pkg_names=$(gum input --placeholder "Enter package names (space-separated)")
else
  read -r -p "Enter package names (space-separated): " pkg_names
fi

if [[ -n "$pkg_names" ]]; then
  sudo dnf install -y $pkg_names
  omarchy-show-done
fi
